        h5 {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            color: #5c2e03;
            background-color: pink;
            font-weight: bold;
        }

        .header {
            background-color: #ffe0b2;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
            color: #d84315;
            margin-bottom: 20px;
        }

        .header img {
            width: 60px;
            height: auto;
        }

        .math-field-container {
            text-align: center;
            margin-bottom: 20px;
        }

        math-field {
            width: 100%;
            font-size: large;
            border-radius: 10px;
        }

        .feedback {
            font-size: 1.3rem;
            margin-top: 10px;
            color: #28a745;
            /* لون الأخضر للإشارة إلى النجاح */
        }

        .incorrect {
            color: red;
