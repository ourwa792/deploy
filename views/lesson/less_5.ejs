        button {
            background-color: #ffce54;
            /* ألوان زاهية للأزرار */
            border: none;
            color: #fff;
            padding: 10px 20px;
            ;
            margin: 10px;
            cursor: pointer;
            font-weight: bold;
            border-radius: 10px;
        }

        button:hover {
            background-color: #ff9f43;
            /* تغيير لون الأزرار عند التمرير */
        }

        /* من الضروري استخدامه عند كل تنسيق رياضي لتصبح الشاشات الصغيرة مناسبة ومتجاوبة */
        .example-box {
            background-color: #fff3cd;
            border: 2px solid #ffeb3b;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            max-width: 100%;
            /* تأكد أن العرض لا يتجاوز 100% */
            overflow-x: auto;
            /* إضافة تمرير أفقي عند الحاجة */
            white-space: nowrap;
            /* منع تكسير النص داخل الـ div */
        }

        .math-equation {
            overflow-x: auto;
            display: block;
            /* عرض المعادلة كـ block */
            white-space: nowrap;
            /* منع التفاف النص */
            max-width: 100%;
            /* ضمان أن المعادلة لا تتجاوز عرض الحاوية */
        }

        .example-box:hover {
            transform: scale(1.2);
        }

        .math-equation-rtl {
            direction: rtl;
            /* لجعل المعادلات تظهر من اليسار إلى اليمين */
            display: inline-block;
            /* للتأكد من عرض المعادلة بشكل مضمن */
        }

        .highlight {
            color: #d32f2f;
            font-weight: bold;
        }

        .question-section {
            background-color: #dff6e0;
            padding: 20px;
            border-radius: 10px;
        }

        p {
            word-wrap: break-word;
            max-width: 100%;
            /* منع تجاوز النص لحدود العنصر */
        }

        ul {
            padding-right: 20px;
            list-style-type: none;
            /*إزالة العلامات الجانبية */
        }

        ul li::before {
            content: "🔹";
            /* إضافة رمز مخصص للعناصر */
            margin-left: 5px;
        }

        ol li label {
            margin-left: 4px !important;
        }

        .knowlege-section {
            background-color: #fff3e0;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }   
     






        .table-custom {
            width: 100%;
            margin-top: 15px;
            margin-bottom: 15px;
            transition: background-color 0.3s ease;
        }

        .table-custom th,
        .table-custom td {
            text-align: center;
            padding: 8px;
        }

        .table-custom th {
            background-color: #ffcc80;
        }

        .table-custom td {
            background-color: #fff8e1;
        }

        .table-custom tbody tr:hover {
            background-color: #ffe082;
