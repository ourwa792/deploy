<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sprite Animation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: rgb(191, 210, 182);
        }

        canvas {
            display: block;
            margin: 0 auto;
            background-color: #fff;
            border: 2px solid #000;
        }

        .speech-bubble {
            margin: 10px auto;
            padding: 10px;
            border-radius: 10px;
            background-color: #fff;
            width: fit-content;
            border: 2px solid #000;
            font-size: 18px;
        }

        .equation, .arrow, .result {
            margin: 20px auto;
            font-size: 24px;
        }

        .box {
            display: inline-block;
            width: 50px;
            height: 30px;
            border: 2px solid #000;
            margin: 0 5px;
            text-align: center;
            font-size: 24px;
            line-height: 30px;
        }

        .arrow {
            font-size: 40px;
        }

        .check-btn {
            padding: 10px 20px;
            font-size: 18px;
            background-color: #4CAF50;
            color: #fff;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        .result {
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <canvas id="canvas" width="400" height="400"></canvas>
    <div class="speech-bubble" id="speechBubble">أهلاً! دعونا نتعلم القسمة اليوم!</div>

    <div class="equation">
        <div class="box" contenteditable="true"></div>
        <span>=</span>
        <div class="box" contenteditable="true">4</div>
        <span>÷</span>
        <div class="box" contenteditable="true">2</div>
    </div>

    <div class="arrow">↓</div>

    <div class="equation">
        <div class="box" contenteditable="true">2</div>
        <span>=</span>
        <div class="box" contenteditable="true">6</div>
        <span>×</span>
        <div class="box" contenteditable="true"></div>
    </div>

    <div class="arrow">↓</div>

    <div class="equation">
        <div class="box" contenteditable="true"></div>
        <span>=</span>
        <div class="box" contenteditable="true">2</div>
        <span>×</span>
        <div class="box" contenteditable="true">1</div>
    </div>

    <button class="check-btn" onclick="checkAnswers()">تحقق من الإجابة</button>

    <div class="result" id="result"></div>

    <script>
        const canvas = document.getElementById("canvas");
        const ctx = canvas.getContext("2d");
        const canvasWidth = canvas.width = 400;
        const canvasHeight = canvas.height = 400;
        const playerImage = new Image();
        playerImage.src = "/image/teachersprite.jpg";
        const spriteWidth = 188;
        const spriteHeight = 352;
        let frameX = 1;
        let gameFrame = 0;
        const staggerFrames = 4;
        const speechBubble = document.getElementById("speechBubble");
        const result = document.getElementById("result");

        function animate() {
            ctx.clearRect(0, 0, canvasWidth, canvasHeight);
            ctx.drawImage(playerImage, frameX * spriteWidth, spriteHeight-150, spriteWidth, spriteHeight, 0, 50, canvasWidth, canvasHeight);

            if (gameFrame % staggerFrames === 0) {
                frameX = frameX < 4 ? frameX + 1 : 1;
            }

            gameFrame++;
            requestAnimationFrame(animate);
        }

        function checkAnswers() {
            const boxes = document.querySelectorAll('.box');
            const answers = [2, 3, 2];  // الإجابات الصحيحة المتوقعة
            let isCorrect = true;

            boxes.forEach((box, index) => {
                if (box.textContent.trim() != answers[index]) {
                    isCorrect = false;
                }
            });

            if (isCorrect) {
                result.textContent = "إجابة صحيحة! ممتاز!";
                speechBubble.textContent = "أحسنت! استمر في التعلم!";
                // تشغيل تغذية راجعة إيجابية
                frameX = 2; // ضبط الإطار لتغذية راجعة إيجابية
            } else {
                result.textContent = "إجابة خاطئة! حاول مرة أخرى.";
                speechBubble.textContent = "لا بأس، يمكنك المحاولة مجددًا!";
                // تشغيل تغذية راجعة سلبية
                frameX = 3; // ضبط الإطار لتغذية راجعة سلبية
            }
        }

        animate();
    </script>
</body>
</html>
