<!DOCTYPE html>
<html lang="ar" dir="auto">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link type="text/css" rel="stylesheet" href="/css/navBar.css">
</head>



<!-- views/partial/navBar.ejs -->
<header>
  <div class="navbar-custom px-4 py-1 mt-1">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-between">
        <ul class="nav col-12 col-lg-auto my-2 justify-content-start my-auto flex-grow-1 text-end">
          <li>
            <a href="/" class="nav-link">
              <img src="/icon/iconHome.png" class="bi d-block mx-auto mb-1" width="34" height="34">
              الرئيسية
            </a>
          </li>
          <% if (user) { %>
            <% if (user.isAdmin) { %>
              <div class="btn-group">
                <button type="button" class="btn custom-dropdown-btn d-flex flex-column" data-bs-toggle="dropdown" aria-expanded="false">
                  <img src="/icon/iconProfile.png" class="bi mx-3" width="34" height="34">
                  حسابي (مدير)
                </button>
                <ul class="dropdown-menu dropdown-menu-end custom-dropdown-menu">
                  <li>
                    <a href="/profile" class="dropdown-item container text-start">
                      حسابي
                      <img src="/icon/iconProfile.png" class="bi mx-3" width="34" height="34">
                    </a>
                  </li>
                  <li>
                    <a href="/admin/dashboard" class="dropdown-item container text-start">
                      لوحة التحكم
                      <img src="/icon/iconDashBoard.jpg" class="bi mx-3" width="34" height="34">
                    </a>
                  </li>
                </ul>
              </div>
            <% } else { %>
              <li>
                <a href="/profile" class="nav-link">
                  <img src="/icon/iconProfile.png" class="bi d-block mx-auto mb-1" width="34" height="34">
                  حسابي
                </a>
              </li>
            <% } %>

            <div class="btn-group">
              <button type="button" class="btn custom-dropdown-btn d-flex flex-column" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="/icon/iconQuiz.jpg" class="bi mx-3" width="34" height="34">
                الاختبارات

              </button>
              <ul class="dropdown-menu dropdown-menu-end custom-dropdown-menu">
                <li>
                  <a href="/quiz/list" class="dropdown-item container text-start">
                    اختبر نفسك
                    <img src="/icon/iconQuiz.jpg" class="bi mx-3" width="34" height="34">
                  </a>
                </li>
               
              </ul>
            </div>

            <li>
              <a href="/videos" class="nav-link">
                <img src="/icon/iconVideo.png" class="bi d-block mx-auto mb-1" width="34" height="34">
                جلسات مصورة
              </a>
            </li>

            <div class="btn-group">
              <button type="button" class="btn custom-dropdown-btn d-flex flex-column" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="/icon/iconPaper.png" class="bi mx-3" width="34" height="34">
                مصادر تعليمية

              </button>
              <ul class="dropdown-menu dropdown-menu-end custom-dropdown-menu">
                <li>
                  <a href="/resources" class="dropdown-item container text-start">
                    مصادر تعليمية
                    <img src="/icon/iconPaper.png" class="bi mx-3" width="34" height="34">
                  </a>
                </li>
                <li>
                  <a href="/wolfram" class="dropdown-item container text-start">
                    أسأل سؤالك
                    <img src="/icon/iconQuestion.png" class="bi mx-3" width="34" height="34">
                  </a>
                </li>
              </ul>
            </div>

            <li>
              <a href="/board" class="nav-link">
                <img src="/icon/iconGame.png" class="bi d-block mx-auto mb-1" width="34" height="34">
                ألعاب تعليمية
              </a>
            </li>
          <% } %>
        </ul>
        <div class="d-flex align-items-center ms-auto text-end">
          <a href="/">
            <img src="/icon/ourwaMath.png" class="bi d-block" width="50" height="50" alt="Logo">
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="px-3 py-2 border rounded-3 my-3 border border-secondary">
    <div class="container d-flex flex-wrap align-items-center justify-content-center">
      <div class="text-end">
        <% if (user) { %>
          <a class="btn btn-light text-dark me-2 nav-link" href="/logout">Log-out</a>
        <% } else { %>
          <a class="btn btn-outline-success nav-link me-2" href="/login">Login</a>
          <a class="btn btn-outline-success nav-link" href="/register">Sign-up</a>
        <% } %>
      </div>
    </div>
  </div>
</header>

